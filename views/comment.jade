//- comment.jade
extend layout.jade
block extScript
  script(type="text/javascript").
    $(function() {
        $("#submit").on('click', function() {
            $.post("/comment", {
                orderId:$(".orderId").attr("value"),
                star: $("#star").val(),
                comment: $("#commentBox").val()
            }, function(data) {
                if(data=="success"){
                window.location.href="/user";
                }
            })
        })
    })

block content
  h1 评价酒店
    div.form-group
      label(for="stars") 评分：
      input(type="number",name="star").form-control#star
      label(for="comment") 文字评价：
      input(type="text",name="comment").form-control#commentBox
      button#submit.btn.btn-primary 提交
    span.sr-only.orderId(value=orderId)
